<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= book.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input class="form-control" type="text" name="book[name]" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="book[description]"><%= book.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="book[price]" value="<%= book.price %>" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <label for="bookAuthor">Author</label>
                    <input class="form-control" type="text" name="book[bookAuthor]" value="<%= book.bookAuthor %>" placeholder="author">
                </div>
                <div class="form-group">
                    <label for="year">Year</label>
                    <input class="form-control" type="number" name="book[year]" value="<%= book.year %>" placeholder="year of production">
                </div>
                <div class="form-group">
                    <label for="pages">Pages</label>
                    <input class="form-control" type="number" name="book[pages]" value="<%= book.pages %>" min="1" step="1" placeholder="number of pages">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= book.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

